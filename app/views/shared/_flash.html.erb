<% if flash[:notice] %>
    <div class="alert alert-info mt-4" role="alert" >
        <p class="mb-0">
            <%= flash[:notice] %>
        </p>
    </div>
<% end %>
<% if flash[:alert] %>
    <div class="alert alert-danger mt-4" role="alert" >
        <p class="mb-0">
            <%= flash[:alert] %>
        </p>
    </div>
<% end %>
